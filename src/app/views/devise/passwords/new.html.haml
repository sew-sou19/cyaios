#account_page.account_page
  .account_page__inner
    .account_page__inner--left.account_page__header
      %h2 パスワードを忘れた方
      .alert
        = alert
    .account_page__inner--right.user-form
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        .field
          .field_input
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力"
        .actions
          = f.submit "メールを送信する", class: "btn"